{% macro print(flashes) %}
    {% import "helpers/heroicon.html.twig" as heroicon %}

    {% for label, messages in flashes %}
        {% for message in messages %}
            {% if label == 'notice' or label == 'success' %}
                {% set bg_color = 'bg-green-50' %}
                {% set text_color = 'text-green-800' %}
                {% set icon = heroicon.check_circle() %}
            {% endif %}

            {% if label == 'warning' %}
                {% set bg_color = 'bg-yellow-50' %}
                {% set text_color = 'text-yellow-800' %}
                {% set icon = heroicon.exclamation() %}
            {% endif %}

            {% if label == 'error' %}
                {% set bg_color = 'bg-red-50' %}
                {% set text_color = 'text-red-800' %}
                {% set icon = heroicon.x_circle() %}
            {% endif %}

            {%  set top = loop.index0 * 16 %}

            <div data-controller="flashes" data-flashes-target="flash" aria-live="assertive" class="fixed left-0 bottom-0 right-0 top-{{ top }} flex items-end px-4 py-6 pointer-events-none sm:p-6 sm:items-start z-50">
                <div class="flex flex-col items-center space-y-4 w-full sm:items-end">
                    <div class="overflow-hidden w-full max-w-sm bg-white rounded-lg ring-1 ring-black ring-opacity-5 shadow-lg pointer-events-auto">
                        <div class="p-4">
                            <div class="flex items-start">
                                <div class="flex-shrink-0 mt-0.5">
                                    {{ icon }}
                                </div>
                                <div class="flex-1 ml-3 w-0">
                                    <p class="text-sm text-gray-500">
                                        {{ message }}
                                    </p>
                                </div>
                                <div class="flex flex-shrink-0 ml-4">
                                    <button data-action="click->flashes#close" class="inline-flex text-gray-400 bg-white rounded-md hover:text-gray-500 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:outline-none">
                                        <span class="sr-only">Close</span>
                                        <svg class="w-5 h-5" x-description="Heroicon name: solid/x" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        {% endfor %}
    {% endfor %}
{% endmacro %}
